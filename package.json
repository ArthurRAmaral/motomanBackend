{
  "name": "motorman",
  "description": "Sistema de Gestão da Equipe de Futebol Americano do América Locomotiva",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": "12.16.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0"
  },
  "scripts": {
    "start": "npm run --prefix api start",
    "test": "npm run --prefix api test",
    "api:dev": "npm run --prefix api dev",
    "client:dev": "npm run --prefix client start",
    "dev": "concurrently \"npm:api:dev\" \"npm:client:dev\"",
    "api:lint": "npm run --prefix api lint",
    "client:lint": "npm run --prefix api lint",
    "lint": "npm run api:lint && npm run client:lint",
    "build": "yarn install && yarn api:install && yarn client:install && npm run --prefix client build && node movePublic.js && npm run --prefix api build",
    "api:install": "cd api && yarn install",
    "client:install": "cd client && yarn install",
    "install-all": "yarn install && concurrently \"npm:api:install\" \"npm:client:install\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafaelbotazini/motorman.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rafaelbotazini/motorman/issues"
  },
  "homepage": "https://github.com/rafaelbotazini/motorman#readme",
  "dependencies": {
    "fs-extra": "^9.0.0"
  }
}
